@model ProjectAssignmentViewModel

<form asp-action="AssignToTeam" role="form">
    @await Html.PartialAsync("_ModalHeader", "Assign Items To Team")
    <div class="modal-body form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label asp-for="TeamName" class="col-lg-4 col-sm-4 control-label"></label>
                    <div class="col-lg-6">
                        <select asp-for="TeamId" asp-items="@Model.Teams" class="form-control">
                            <option>Please select</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="AssignedItemsCount" class="ol-lg-4 col-sm-4 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="AssignedItemsCount" class="form-control" />
                        <span asp-validation-for="AssignedItemsCount" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter")
</form>
